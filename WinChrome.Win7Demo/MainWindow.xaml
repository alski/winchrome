<WinChrome:SearchableNavigationWindow 
	x:Class="WinChrome.Win7Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"	
    xmlns:view="clr-namespace:WinChrome.View" 
	xmlns:WinChrome="clr-namespace:WinChrome;assembly=WinChrome" Title="WinChrome Windows7 Demo" 
	Icon="/App.ico" 
	Loaded="MainWindowLoaded"
	ResizeMode="CanResizeWithGrip" 
	Style="{StaticResource Win7NavigationWindow}"
	mc:Ignorable="d" 
	MinWidth="400" 
	d:DesignHeight="400" d:DesignWidth="640" 
    WinChrome:SearchableNavigationWindow.SearchCommand="{Binding}"
>
    <WinChrome:SearchableNavigationWindow.Navigation>
        <view:Navigation x:Name="navigationTree"/>
    </WinChrome:SearchableNavigationWindow.Navigation>    

</WinChrome:SearchableNavigationWindow>